<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.HackApp.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:paddingHorizontal">48dp</item>
    </style>

    <style name="Widget.HackApp.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_color_state_list</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="hintTextColor">@color/orange</item>
        <item name="passwordToggleTint">@color/grey</item>
    </style>

    <style name="Widget.HackApp.TextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.HackApp.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
    </style>

    <style name="Widget.HackApp.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/orange</item>
    </style>

</resources>